@model IEnumerable<Collecting.Models.Items>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Items"];
}

<h1>@Localizer["Items"] </h1>

<div>
    <dl class="row">
        @foreach (var item in Model)
        {
            <dt class = "col-sm-2">
                @item.Name
            </dt>
            <dd class = "col-sm-10">
                @item.Name
            </dd>
        }
    </dl>
</div>
<div>
    @if (User.IsInRole("active"))
    {
        <a asp-action="Add" asp-route-temp=@ViewBag.Id>@Localizer["Add"] </a>
        <hr />
    }
    <a asp-action="Index">@Localizer["Back"] </a>
</div>
