@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Collecting.Models.Items

@{
    ViewData["Title"] = Localizer["Add"];
}

<h1>@Localizer["Add"] </h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" asp-controller="Home" >
            <p>
                <label asp-for="Name" class="control-label" >@Localizer["Name"] </label><br />
                <input type="text" asp-for="Name" class="form-control" />
            </p>
            <p>
                <input type="submit" value=@Localizer["Submit"] class="btn btn-primary" />
            </p>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["Back"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
