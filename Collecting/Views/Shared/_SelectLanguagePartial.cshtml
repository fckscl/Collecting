@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@using System.Globalization
 
@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions

@{
	var lang = CultureInfo.CurrentCulture.Name == "ru" ? "En" : "Ru";
}
<ul class="navbar-nav">
	<li class="nav-item">
			<form  class="form-inline" asp-controller="Home" asp-action="SetLanguage"
			asp-route-returnUrl="@Context.Request.Path" method="post">
				<button  type="submit" class="nav-link btn btn-link text-dark">@lang</button>
			</form>
	</li>
</ul>
